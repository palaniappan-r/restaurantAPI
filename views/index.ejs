<% layout ('/layouts/boilerplate') %>
<h1 class="display-1 text-center">Restaurants</h1><br>
<ul>
<% for(i of rests) { %> 
    <div class="card text-center">
        <div class="card-header">
           <h1> <%= i.name %> </h1>
        </div>
        <div class="card-body">
          <h6 class="card-title"><%= i.location %></h6>
          <p class="card-text">
            <% for(let j in i.cuisines) { %> 
                <span class="badge badge-danger"> <%= i.cuisines[j] %></span>
            <% } %> 
          </p>
          <a href=<%=`/restaurants/client/${i._id}`%> class="btn btn-primary">View Menu</a>
        </div>
        <div class="card-footer text-muted">
           Avg Price : <%=`â‚¹${Math.ceil(i.avgPrice)}`%>
        </div>
    </div>
<br>  
<% } %>
</ul> 




