<% layout ('/layouts/boilerplate') %>
<h2>Client User Login</h2>
<form action="/user/clientLogin" method="POST" novalidate class="validated-form">
    <div class="form-group">
        <h4>Email</h4>
        <input type="text" class="form-control" id="email" aria-describedby="email" name="email" required><br>
    </div>
    <div class="form-group">
        <h4>Password</h4>
        <input type="password" class="form-control" id="password" aria-describedby="password" name="password" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/user/clientLogin/google" class="btn btn-danger">Login With Google</a>
</form>


<script src="/validateForms.js"></script>