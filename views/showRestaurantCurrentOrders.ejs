<% layout ('/layouts/boilerplate') %>
    <h1 class = "text-center"><%=rest.name %> Current Orders</h1>
    <h2 class = "text-center">Total Revenue : <%=rest.totalRevenue %></h2>
<ul>
    <% for(i of rest.currentOrders) { %> 
        <div class="card text-center">
            <div class="card-header">
                <h4> Order ID : <%= i._id %> </h4>
                <h6> Last Update : <%= i.updatedAt %> </h6>
            </div>
            <div class="d-inline"><br>
            <% for(j of i.items) {%> 
                    <h5><%=j.itemName%> - <%=j.quantity%></h5> 
            <% } %> 
             <h6> Current Status : <%=i.status%></h6> 
             <form action="/restaurants/<%=rest._id%>/order/<%=i._id%>/?_method=DELETE" method="POST">
                <button class = "btn btn-outline-danger col-2">
                    Cancel Order
                </button> 
            </form><br>
            <form action="/restaurants/<%=rest._id%>/order/<%=i._id%>/?_method=PUT" method="POST">
                <label for="status">Status</label>
                <select name="status" id="status">
                    <option value="Received">Received</option>
                    <option value="Confirmed">Confirmed</option>
                    <option value="Cooking">Cooking</option>
                    <option value="Done">Done</option>
                </select>
                <input type="submit" value="Submit">
          </form>
            <br>
                <h6>Total Price : <%=i.totalPrice%></h6>
        </div>
    <br>  
    <% } %>
</ul> 
