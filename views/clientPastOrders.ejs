<% layout ('/layouts/boilerplate') %>
    <h1 class = "text-center">Past Orders</h1>
<ul>
    <% for(i of orders) { %> 
        <div class="card text-center">
            <div class="card-header">
               <h4> Order ID : <%= i._id %> </h4>
               <h6> Last Update : <%= i.updatedAt %> </h6>
            </div>
            <div class="d-inline"><br>
                <% for(j of i.items) {%> 
                <h5><%=j.itemName%> - <%=j.quantity%></h5> 
                <% } %> 
                <h5>Total Price : <%=i.totalPrice%></h5>
                <h2><span class="badge badge-info"> <%=i.status%> </span></h2>
                    <form action="/user/order/<%=i._id%>/?_method=DELETE" method="POST">
            </form><br>
            <br>
        </div>
    <br>  
    <% } %>
</ul> 